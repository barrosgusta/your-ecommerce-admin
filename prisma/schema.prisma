generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}
model Seller {
  id   String  @id
  name      String
  email     String   @unique
  ads       CarAd[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model CarAd {
  sellerId  String
  seller    Seller   @relation(fields: [sellerId], references: [id])
  id        String   @id @default(cuid())
  brand     String 
  brandId   String  @default("")
  model     String
  modelId   String  @default("")
  price     Decimal
  year      Int
  fuel      String
  kms       Int
  isTurbo   Boolean @default(false)
  stage     Int
  description String
  isFeatured Boolean @default(false)
  isArchived Boolean @default(false)
  images    Image[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([sellerId])
}
model Image {
  id        String   @id @default(cuid())
  adId      String
  ad        CarAd       @relation(fields: [adId], references: [id])
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([adId])
}